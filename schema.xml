<?xml version="1.0" encoding="utf-8"?>
<schema xmlns="http://www.CStore.com"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:cstore="http://www.CStore.com"
    xsi:schemaLocation="http://www.CStore.come schema.xsd">

    <tables>
        <table>
            <table_name>EMPLOYEE</table_name>

            <columns>
                <column>
                    <column_name>id</column_name>
                    <data_type>int</data_type>
                </column>
                <column>
                    <column_name>age</column_name>
                    <data_type>int</data_type>
                </column>
                <column>
                    <column_name>salary</column_name>
                    <data_type>float</data_type>
                </column>
                <column>
                    <column_name>gender</column_name>
                    <data_type>int</data_type>
                </column>
                <column>
                    <column_name>dept_id</column_name>
                    <data_type>int</data_type>
                </column>
            </columns>

            <primary_key>id</primary_key>

            <foreign_keys>
                <foreign_key>
                    <FK_from>dept_id</FK_from>
                    <FK_table>DEPARTMENT</FK_table>
                    <FK_to>id</FK_to>
                </foreign_key>
            </foreign_keys>
        </table>

        <table>
            <table_name>DEPARTMENT</table_name>

            <columns>
                <column>
                    <column_name>id</column_name>
                    <data_type>int</data_type>
                </column>
                <column>
                    <column_name>mgr_id</column_name>
                    <data_type>int</data_type>
                </column>
                <column>
                    <column_name>city_id</column_name>
                    <data_type>int</data_type>
                </column>
            </columns>

            <primary_key>id</primary_key>

            <foreign_keys>
                <foreign_key>
                    <FK_from>mgr_id</FK_from>
                    <FK_table>EMPLOYEE</FK_table>
                    <FK_to>id</FK_to>
                </foreign_key>
            </foreign_keys>
        </table>

        <table>
            <table_name>CITY</table_name>

            <columns>
                <column>
                    <column_name>id</column_name>
                    <data_type>int</data_type>
                </column>
                <column>
                    <column_name>dept_id</column_name>
                    <data_type>int</data_type>
                </column>
            </columns>

            <primary_key>id</primary_key>

            <foreign_keys>
                <foreign_key>
                    <FK_from>dept_id</FK_from>
                    <FK_table>DEPARTMENT</FK_table>
                    <FK_to>id</FK_to>
                </foreign_key>
            </foreign_keys>
        </table>
    </tables>

    <projections>
        <projection>

            <projection_name>EMPLOYEE_DEPARTMENT_PROJECTION</projection_name>

            <tables>
                <base_table>EMPLOYEE</base_table>
                <join_tables>
                    <table>
                        <FK_from>dept_id</FK_from>
                        <FK_table>DEPARTMENT</FK_table>
                        <FK_to>id</FK_to>
                    </table>
                </join_tables>
            </tables>

            <columns>
                <column>
                    <name>emp_id</name>
                    <table_name>EMPLOYEE</table_name>
                    <column_name>id</column_name>
                </column>
                <column>
                    <name>age</name>
                    <table_name>EMPLOYEE</table_name>
                    <column_name>age</column_name>
                    <encoding>RLE</encoding>
                </column>
                <column>
                    <name>gender</name>
                    <table_name>EMPLOYEE</table_name>
                    <column_name>gender</column_name>
                    <encoding>bitmap</encoding>
                </column>
                <column>
                    <name>dept_id</name>
                    <table_name>DEPARTMENT</table_name>
                    <column_name>id</column_name>
                </column>
            </columns>

            <sort_key>age</sort_key>

            <join_indexes>
                <join_index>
                    <from>id</from>
                    <other_projection>EMPLOYEE_CITY_PROJECTION</other_projection>
                    <to>id</to>
                </join_index>
            </join_indexes>

        </projection>

        <projection>

            <projection_name>EMPLOYEE_CITY_PROJECTION</projection_name>

            <tables>
                <base_table>EMPLOYEE</base_table>
                <join_tables>
                    <table>
                        <FK_from>city_id</FK_from>
                        <FK_table>CITY</FK_table>
                        <FK_to>id</FK_to>
                    </table>
                </join_tables>
            </tables>

            <columns>
                <column>
                    <name>emp_id</name>
                    <table_name>EMPLOYEE</table_name>
                    <column_name>id</column_name>
                </column>
                <column>
                    <name>age</name>
                    <table_name>EMPLOYEE</table_name>
                    <column_name>age</column_name>
                    <encoding>RLE</encoding>
                </column>
                <column>
                    <name>city_id</name>
                    <table_name>CITY</table_name>
                    <column_name>id</column_name>
                </column>
            </columns>

            <sort_key>age</sort_key>

        </projection>
    </projections>

</schema>